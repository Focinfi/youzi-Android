<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="70dp">
            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">
                <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent">
                    <ImageView
                            android:id="@+id/main_pic_imgv"
                            android:layout_width="fill_parent"
                            android:layout_height="250px"
                            />
                    <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:padding="5dp"
                            android:background="#a0000000"
                            android:orientation="horizontal">
                        <TextView
                                android:id="@+id/level_textv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="AAAA景区"
                                android:textColor="@android:color/white"
                                />
                        <TextView
                                android:id="@+id/price_textv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="门票:50元"
                                android:textColor="@android:color/white"/>
                    </LinearLayout>

                </RelativeLayout>
                <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="10dp">
                    <ImageView
                            android:id="@+id/location_imgv"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentLeft="true"
                            android:src="@drawable/ic_launcher"/>
                    <TextView
                            android:id="@+id/location_textv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:textSize="18dp"
                            android:text="南京市"
                            android:layout_toRightOf="@+id/location_imgv"
                            android:layout_centerVertical="true"/>
                    <TextView
                            android:id="@+id/distance_textv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="距离 1km"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"/>
                </RelativeLayout>
                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/background_dark"
                        android:layout_marginLeft="60dp"
                        android:layout_marginRight="10dp"
                        />
                <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="10dp">
                    <ImageView
                            android:id="@+id/open_time_imgv"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentLeft="true"
                            android:src="@drawable/ic_launcher"/>
                    <TextView
                            android:id="@+id/open_time_textv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:textSize="18dp"
                            android:text="8:30-18:30 周一整修"
                            android:layout_toRightOf="@+id/open_time_imgv"
                            android:layout_centerVertical="true"/>
                </RelativeLayout>
                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="8dp"
                        android:background="@android:color/white"/>
                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:textSize="20dp"
                        android:text="景区介绍"
                        android:paddingLeft="10dp"
                        android:gravity="center_vertical"/>
                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/background_dark"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        />
                <TextView
                        android:id="@+id/desc_textv"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:textSize="18dp"
                        android:text="中山陵是中国近代伟大的民主革命先行者孙中山先生的陵寝"/>
            </LinearLayout>
        </ScrollView>
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:background="@android:color/holo_green_light">
            <Button
                    android:id="@+id/tourist_region_music_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:clickable="false"
                    android:text="播放"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>

